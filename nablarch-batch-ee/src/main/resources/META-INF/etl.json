{
  "inputFileBasePath": "testdata/input",
  "outputFileBasePath": "testdata/output",
  "jobs": {
    "sample-etl": {
      "steps" : {
        "extract": {
          "type": "file2db",
          "bean": "com.nablarch.archetype.dto.SampleUserDto",
          "fileName": "sample-etl.csv"
        },
        "validation" : {
          "type": "validation",
          "bean": "com.nablarch.archetype.dto.SampleUserDto",
          "errorEntity": "com.nablarch.archetype.dto.SampleUserError",

          "mode": "ABORT"

        },
        "truncate": {
          "type": "truncate",
          "entities": [
            "com.nablarch.archetype.dto.SampleUserDto"
          ]
        },
        "load": {
          "type": "db2db",
          "bean": "com.nablarch.archetype.entity.SampleUser",
          "sqlId": "SELECT_SAMPLE_USER",
          "updateSize": {
            "size": 200000,
            "bean": "com.nablarch.archetype.dto.SampleUserDto"
          }
        }
      }
    }
  }
}